{
  "version": 2,
  "builds": [
    {
      "src": "api/tasks.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/tasks",
      "dest": "/api/tasks"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}