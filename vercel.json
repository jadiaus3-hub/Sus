{
  "version": 2,
  "builds": [
    {
      "src": "api/tasks.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/tasks",
      "destination": "/api/tasks"
    },
    {
      "source": "/((?!api/.*).*)",
      "destination": "/client/dist/index.html"
    }
  ]
}